<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <Button
        android:id="@+id/updateLocationBtn"
        android:layout_width="351dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/californiaGold"
        android:text="UPDATE LOCATION"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFirstname" />

    <TextView
        android:id="@+id/AboutYouCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:text="About You"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NameCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AboutYouCaption" />

    <EditText
        android:id="@+id/editFirstname"
        android:layout_width="146dp"
        android:layout_height="40dp"
        android:layout_marginStart="34dp"
        android:backgroundTint="#FDB515"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textColor="#FDB515"
        android:textColorHint="#FDB515"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameCaption" />

    <EditText
        android:id="@+id/editLastname"
        android:layout_width="146dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#FDB515"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textColor="#FDB515"
        android:textColorHint="#FDB515"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/editFirstname"
        app:layout_constraintTop_toBottomOf="@+id/NameCaption" />

    <TextView
        android:id="@+id/YourCarCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="24dp"
        android:text="Your Car"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateLocationBtn" />

    <TextView
        android:id="@+id/CarMakeCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="16dp"
        android:text="Car Make"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/YourCarCaption" />


    <EditText
        android:id="@+id/editCarMake"
        android:layout_width="146dp"
        android:layout_height="40dp"
        android:layout_marginStart="34dp"
        android:backgroundTint="#FDB515"
        android:ems="10"
        android:hint="Car Make"
        android:inputType="textPersonName"
        android:textColor="#FDB515"
        android:textColorHint="#FDB515"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CarMakeCaption" />


    <TextView
        android:id="@+id/CarRegCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="16dp"
        android:text="Car Registration"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCarMake" />


    <EditText
        android:id="@+id/editCarReg"
        android:layout_width="146dp"
        android:layout_height="40dp"
        android:layout_marginStart="34dp"
        android:backgroundTint="#FDB515"
        android:ems="10"
        android:hint="Car Make"
        android:inputType="textPersonName"
        android:textColor="#FDB515"
        android:textColorHint="#FDB515"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CarRegCaption" />

    <TextView
        android:id="@+id/CarSeatsCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="16dp"
        android:text="Amount of Seats"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCarReg" />

    <EditText
        android:id="@+id/editCarSeats"
        android:layout_width="146dp"
        android:layout_height="40dp"
        android:layout_marginStart="34dp"
        android:backgroundTint="#FDB515"
        android:ems="10"
        android:hint="Car Seats No"
        android:inputType="textPersonName"
        android:textColor="#FDB515"
        android:textColorHint="#FDB515"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CarSeatsCaption" />



    <Button
        android:id="@+id/SaveProfileChangesBtn"
        android:layout_width="351dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="84dp"
        android:backgroundTint="@color/californiaGold"
        android:text="SAVE CHANGES"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>